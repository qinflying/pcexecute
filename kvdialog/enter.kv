#:kivy 1.10.0

<CItemLayout@StackLayout>:
    orientation : 'lr-tb'
    canvas : 
        Color :
            rgba : (1, 1, 1, 0.5)
        Rectangle:
            pos : self.pos
            size : self.size
    cols : 5
    size_hint : (.8, 1)

<CEnterMenu>:
    canvas:
        Color:
            rgba:(0, 1., 1., 0.5)
        Rectangle:
            pos : self.pos 
            size : self.size
    BoxLayout:
        orientation:'horizontal'
        spacing : 10
        CItemLayout:
            id : 'item_layout'

        StackLayout:
            cols : 1
            spacing : 10
            padding : 5
            size_hint : (.2, 1)
            CFButton:
                text:'添加'
                on_release : root.on_add_item()
                size_hint : (1, .1)
            CFButton:
                text:'删除'
                on_release: root.on_del_item()
                size_hint : (1, .1)
            CFButton:
                text:'移动'
                on_release:root.on_move_item()
                size_hint : (1, .1)
            CFButton:
                text:'确定'
                on_release: root.on_confirm_item()
                size_hint : (1, .1)
